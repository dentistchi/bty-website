# JWT secret (production에서 반드시 변경)
JWT_SECRET=your-secret-here

# Gemini API (Safe Mirror 안전한 거울). 없으면 고정 폴백 응답 사용
GEMINI_API_KEY=

# OpenAI API (채팅 AI). Safe Mirror는 GEMINI_API_KEY 사용
OPENAI_API_KEY=

# bty-ai-core (Leadership Reflection chat)
NEXT_PUBLIC_BTY_AI_URL=http://localhost:4000

# Admin (Quality Events, Patch Reports - server-side only)
ADMIN_API_KEY=

# 디버그 페이지 「패치 생성 및 배포」 클릭 시 호출할 배포 웹훅 (예: Cloudflare Pages Deploy Hook)
DEPLOY_WEBHOOK_URL=

# Microsoft Entra ID (Azure AD) for Admin Dashboard
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_TENANT_ID=
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=
BTY_ADMIN_EMAILS=admin@example.com

# 멤버십 승인 알림 (Arena 가입 요청 시 Admin 이메일 발송. 없으면 로그만 출력)
RESEND_API_KEY=
RESEND_FROM=

# 상대 사이트 URL (다른 사이트에서도 로그인 링크용)
NEXT_PUBLIC_TODAY_ME_URL=http://localhost:3000
NEXT_PUBLIC_BTY_URL=http://localhost:3001

# Supabase (BTY Journey 28일 진행 저장)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
